{
  "name": "@lendi/ralph",
  "description": "ralph is a CLI tool that automates security incident response",
  "version": "1.0.4",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "bin": {
    "ralph": "lib/index.js"
  },
  "dependencies": {
    "aws-sdk": "^2.395.0",
    "dotenv": "^8.2.0",
    "inquirer": "^6.2.1",
    "pino": "^5.13.2",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^24.0.20",
    "@types/node": "^12.11.7",
    "@types/pino": "^5.8.13",
    "@types/sinon": "^7.5.0",
    "@types/yargs": "^13.0.3",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "aws-sdk-mock": "^4.5.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "9.4.2",
    "prettier": "^1.18.2",
    "sinon": "^7.5.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4",
    "markdownlint": "^0.17.2"
  },
  "scripts": {
    "build": "tsc",
    "cli": "ts-node --files src/index.ts",
    "lint:fix:other": "yarn prettier --write",
    "lint:fix:ts": "yarn lint:ts --fix",
    "lint:fix": "yarn lint:fix:ts && yarn lint:fix:other",
    "prettier": "prettier \"**/*.{json,scss,yaml,yml}\"",
    "lint:other": "yarn prettier --list-different",
    "lint:md": "markdownlint  -i '**/node_modules/**' **/*.md",
    "lint:ts": "eslint --ignore-path .gitignore --ignore-path .prettierignore \"**/*.ts\"",
    "lint": "yarn lint:other && yarn lint:ts && yarn lint:md",
    "test": "jest"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{md}": [
      "yarn lint:md",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
